datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma"
}

model User {
  id            String   @id @default(cuid())
  walletAddress String   @unique
  username      String   @unique
  createdAt     DateTime @default(now())
  jousts        Joust[]  @relation("JoustParticipants")
}

model Room {
  id        String   @id @default(cuid())
  name      String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  jousts    Joust[]
}

model Joust {
  id          String   @id @default(cuid())
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id])
  players     User[]   @relation("JoustParticipants")
  prompt1     String?
  prompt2     String?
  image1Url   String?
  image2Url   String?
  winner      String?
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
} 